{
  "NAME": "Step OSS frontend",

  "ACTIONS": [
    {
      "ACTION": "COMPILE",
      "TYPE": "NPM",
      "BEFORE": "step-frontend-before-compile",
      "PARAMETERS": [
        {
          "NAME": "ALL",
          "URL": "nexus-staging https://nexus-enterprise-staging.stepcloud-test.ch/repository/staging-npm/"
        },
        {
          "NAME": "PRODUCTION",
          "URL": "nexus-deployment https://nexus-enterprise.exense.ch/repository/exense-npm/"
        }
      ],
      "FOLDER": "."
    },
    {
      "ACTION": "PUSH",
      "TYPE": "MAVEN",
      "PARAMETERS": [
        {
          "NAME": "ALL",
          "URL": "nexus-staging::https://nexus-enterprise-staging.stepcloud-test.ch/repository/staging-maven/"
        },
        {
          "NAME": "PRODUCTION",
          "URL": "nexus-exense::https://nexus-enterprise.exense.ch/repository/exense/"
        }
      ],
      "ACTIONS": [
        {
          "ORIGIN": "dist/step-app",
          "DESTINATION": "ch.exense.step.frontend:step-app:${VERSION}",
          "PACKAGING": "jar"
        }
      ]
    }
  ]
}
