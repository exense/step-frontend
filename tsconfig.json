{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "dom"],
    "paths": {
      "@exense/step-core": ["projects/step-core/src/public-api.ts"],
      "@exense/step-frontend": ["projects/step-frontend/src/public-api.ts"]
    },
    "useDefineForClassFields": false,
    "skipLibCheck": true
  }
}
